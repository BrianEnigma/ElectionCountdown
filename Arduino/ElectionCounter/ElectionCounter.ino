String fetchData()
{
    String result = "";
    display.println("Fetching NTP time");
    display.display();
    
    // Set up time to allow for certificate validation
    configTime(3 * 3600, 0, "pool.ntp.org", "time.nist.gov");
    Serial.print("Waiting for NTP time sync: ");
    time_t now = time(nullptr);
    while (now < 8 * 3600 * 2) 
    {
        delay(500);
        Serial.print(".");
        now = time(nullptr);
    }
    Serial.println("");
    struct tm timeinfo;
    gmtime_r(&now, &timeinfo);
    Serial.print("Current time: ");
    Serial.print(asctime(&timeinfo));
    display.clearDisplay();
    display.setCursor(0, 0);
    display.println(asctime(&timeinfo));
    display.display();
  
    // Secure connect
    Serial.print("connecting to server");
    Serial.println(host);
    display.clearDisplay();
    display.setCursor(0, 0);
    display.println("(...refreshing...)");
    display.println("Connecting to");
    display.println(host);
    display.display();
    
    // Use WiFiClient class to create TCP connections
    WiFiClientSecure client;
    CertStore certStore;
#ifdef VERIFY_CA_CHAIN
    client.setTrustAnchors(&caCerts);
#else
    client.setInsecure();
#endif
    const int httpPort = 443;
    if (!client.connect(host, httpPort)) 
    {
        char message[255] = {0};
        client.getLastSSLError(message, sizeof(message));
        Serial.println("connection failed");
        Serial.println(message);
        delay(30000);
        return result;
    }
    
    // We now create a URI for the request
    Serial.print("Requesting URL: ");
    Serial.println(url);
    display.clearDisplay();
    display.setCursor(0, 0);
    display.println("(...refreshing...)");
    display.println("Requesting Counter");
    display.display();
    
    // This will send the request to the server
    client.print(String("GET ") + url + " HTTP/1.1\r\n" +
                 "Host: " + host + "\r\n" + 
                 "Connection: close\r\n\r\n");
    delay(500);
    
    // Read all the lines of the reply from server and print them to Serial
    while(client.available())
    {
        String line = client.readStringUntil('\r');
        Serial.print(line);
        result += line;
    }
    
    Serial.println();
    Serial.println("closing connection");
    return result;
}

// Simple JSON parser for numbers. Returns as string, since one is an int and one is a float.
String parseNumber(const String &s, const char *fieldName)
{
    String result = "";
    int pos = s.indexOf(fieldName);
    if (pos < 0)
        return result;
    char c = s.charAt(pos);
    while (pos < s.length() && c != ',' && c != '\n' && c != '\r' && c != '}')
    {
        if ((c >= '0' && c <= '9') || (c == '-') || (c == '.'))
            result += c;
        pos++;
        if (pos < s.length())
            c = s.charAt(pos);
    }
    return result;
}

// Simple JSON parser for quoted strings.
// Note: Doesn't work for things escaped within the string.
String parseText(const String &s, const char *fieldName)
{
    String result = "";
    int pos = s.indexOf(fieldName);
    if (pos < 0)
        return result;
    pos = s.indexOf(":", pos + 1);
    if (pos < 0)
        return result;
    pos = s.indexOf("\"", pos + 1);
    if (pos < 0)
        return result;
    pos++;
    char c = s.charAt(pos);
    while (pos < s.length() && c != '"')
    {
        result += c;
        pos++;
        if (pos < s.length())
            c = s.charAt(pos);
    }
    return result;
}

bool hasNonwhitespace(const String &s)
{
    for (int i = 0; i < s.length(); i++)
    {
        if ((s[i] == ' ') || (s[i] == '\n') || (s[i] == '\r') || (s[i] == '\t'))
            continue;
        return true;
    }
    return false;
}

